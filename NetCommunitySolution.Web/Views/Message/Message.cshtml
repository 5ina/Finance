@model NetCommunitySolution.Web.Models.Messages.MessageModel
@{
    ViewBag.Title = "我的消息";
    Layout = "~/Views/Shared/_MessageLayout.cshtml";
}
<style>
    .page__hd {
        padding:15px;
        text-align:center;
    }

</style>
<div class="page__hd">
    <h4 class="page__title">@Model.Subject</h4>
    <p class="page__desc">@Model.CreationTime.ToString("yyyy/MM/dd HH:mm:ss")</p>
</div>
<div class="page__bd">
    <article class="weui-article">
        <section>
               @Model.Text        
        </section>
    </article>
</div>

