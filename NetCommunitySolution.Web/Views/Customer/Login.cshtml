@model NetCommunitySolution.Web.Models.Customers.CustomerLoginModel
@{
    Layout = "~/Views/Shared/_Root.Head.cshtml";

}
@section styles
{
    @Html.IncludeStyle("~/Content/login.css")
}
<div class="login-page">

    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "weui-cells_form", @id = "login-form" }))
    {
        @Html.AntiForgeryToken()
        <div class="page__hd">
            <h3 class="page__title">管理后台登录系统</h3>
        </div>
        <div class="weui-cell">
            <div class="weui-cell__hd">
                @Html.WELabelFor(model => model.LoginName)
            </div>
            <div class="weui-cell__bd">
                @Html.WEEditorFor(model => model.LoginName, true,"手机号或者昵称","您输入的账号不正确","*")
            </div>
        </div>
        <div class="weui-cell">
            <div class="weui-cell__hd">
                @Html.WELabelFor(model => model.Password)
            </div>
            <div class="weui-cell__bd">
                @Html.WEPasswordFor(model => model.Password)
            </div>
        </div>
        <div class="weui-cell">
        </div>
        <div class="weui-cells__title"></div>


        <div class="weui-btn-area">
            <input type="submit" value="登录" class="weui-btn weui-btn_primary" />
        </div>
    }
</div>


<script type="text/javascript">
    /* topTips */
    _weui2.default.topTips('请填写正确的字段', {
        duration: 3000,
        className: "custom-classname",
        callback: function callback() {
        }
    });
</script>
