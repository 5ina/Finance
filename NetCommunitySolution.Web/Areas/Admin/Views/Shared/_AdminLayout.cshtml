<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>@ViewBag.Title - Oss 管理平台</title>
    @Styles.Render("~/admin/css")
    @Scripts.Render("~/Bundles/js")
    @Scripts.Render("~/Bundles/js/top")
    @Scripts.Render("~/layui/js")
    @RenderSection("scripts", required: false)

</head>
<body class="layui-layout-body">
    <div class="layui-layout layui-layout-admin">
        <div class="layui-header">
            <div class="layui-logo"><a href="@Url.Action("Index","Home")">Admin - Oss 管理</a></div>
            <!-- 头部区域（可配合layui已有的水平导航） -->

            @Html.Action("CustomerHeader", "Customer")
        </div>

        <!-- 左侧导航 -->
        @Html.Partial("_Sidebar")

        <div class="layui-body">
            <!-- 内容主体区域 -->

            @RenderBody()
        </div>

        <div class="layui-footer">
            <!-- 底部固定区域 -->
            © layui.com - 底部固定区域
        </div>
    </div>
    <script>
        //JavaScript代码区域
        layui.use('element', function () {
            var element = layui.element;
            element.render();
        });
    </script>
</body>
</html>